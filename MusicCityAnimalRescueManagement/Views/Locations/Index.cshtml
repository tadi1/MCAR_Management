@model IEnumerable<MusicCityAnimalRescueManagement.Models.Location>

@{
    ViewBag.Title = "Location List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Locations - Fosters, Vets, and Shelters</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="display" id="locations">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dogs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isFoster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isPullLocation)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.isAdoptionVenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isBasicVaxLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isRabiesVaxLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dogs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isFoster)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isPullLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isAdoptionVenue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isBasicVaxLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isRabiesVaxLocation)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) 
                    @Html.ActionLink("Details", "Details", new { id = item.id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts
{
    @Scripts.Render("~/bundles/dataTables")

    <script>
        $(document).ready(function () {
            $('#locations').DataTable();
        });
    </script>
}