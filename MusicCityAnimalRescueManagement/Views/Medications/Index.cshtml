@model IEnumerable<MusicCityAnimalRescueManagement.Models.Animals.Medication>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Medications</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isFleaTick)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isHeartworm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isForCats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isForDogs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isDewormer)
        </th>
