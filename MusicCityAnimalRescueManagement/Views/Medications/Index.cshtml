    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isFleaTick)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isHeartworm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isForCats)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isForDogs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isDewormer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
