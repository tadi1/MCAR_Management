}



@foreach (IncomeEntry entry in Model.IncomeEntries)
{
    switch (entry.StrAccountType.AccountTypeName)
    {
        case "PayPal":
            if (entry.AdoptionsDecimal.HasValue)
            {
                payPalIncomes += entry.AdoptionsDecimal.Value;
            }
            if (entry.DonationsDecimal.HasValue)
            {
                payPalIncomes += entry.DonationsDecimal.Value;
            }
            if (entry.MiscellaneousIncomeDecimal.HasValue)
            {
                payPalIncomes += entry.MiscellaneousIncomeDecimal.Value;
            }
            break;
        case "General":
            if (entry.AdoptionsDecimal.HasValue)
            {
                generalIncomes += entry.AdoptionsDecimal.Value;
            }
            if (entry.DonationsDecimal.HasValue)
            {
                generalIncomes += entry.DonationsDecimal.Value;
            }
            if (entry.MiscellaneousIncomeDecimal.HasValue)
            {
                generalIncomes += entry.MiscellaneousIncomeDecimal.Value;
            }
            break;
        case "Other":
            if (entry.AdoptionsDecimal.HasValue)
            {
                otherIncomes += entry.AdoptionsDecimal.Value;
            }
            if (entry.DonationsDecimal.HasValue)
            {
                otherIncomes += entry.DonationsDecimal.Value;
            }
            if (entry.MiscellaneousIncomeDecimal.HasValue)
            {
                otherIncomes += entry.MiscellaneousIncomeDecimal.Value;
            }
            break;
        case "Savings":
            if (entry.AdoptionsDecimal.HasValue)
            {
                savingsIncomes += entry.AdoptionsDecimal.Value;
            }
            if (entry.DonationsDecimal.HasValue)
            {
                savingsIncomes += entry.DonationsDecimal.Value;
            }
            if (entry.MiscellaneousIncomeDecimal.HasValue)
            {
                savingsIncomes += entry.MiscellaneousIncomeDecimal.Value;
            }
            break;
    }
}






