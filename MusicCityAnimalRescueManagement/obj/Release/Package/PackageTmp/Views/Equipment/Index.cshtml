@model IEnumerable<MusicCityAnimalRescueManagement.ViewModels.EquipmentViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentItem.ItemNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentItem.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentItem.LocationId)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentItem.ItemNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentItem.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentItem.LocationId)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentItem.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.EquipmentItem.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentItem.id })
            </td>
        </tr>
    }

</table>
